!!!
%html
  %head
    %title
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    = render "common/navigation"

    .container.MainContainer
      = render "common/alerts"
      - if page_header.present?
        .page-header
          %h1= page_header
      = content_for?(:content) ? yield(:content) : yield

