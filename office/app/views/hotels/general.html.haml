= content_for(:page_header) do
  = @hotel.name
  = link_to 'Delete', hotel_path(@hotel), method: :delete, confirm: 'Are you sure you want to delete this hotel?', :class => 'btn danger FloatRight'

= simple_form_for resource do |hotel|
  = render partial: 'form', locals: { hotel: hotel }
  .actions
    = hotel.button :submit, 'Save Changes', :class => 'primary'